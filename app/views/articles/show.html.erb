<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h1 class="text-center"><%= @article['title'] %></h1>
        </div>
        <div class="card-body">
          <img class="card-img-top" src="<%= @article['image_url'] %>" alt="<%= @article['title'] %>" width="500">
          <p class="card-text"><strong>Published:</strong> <%= @article['published_at'] %></p>
          <p class="card-text"><strong>Author:</strong> <%= @article['author'] %></p>
          <p class="card-text"><strong>Source:</strong> <%= @article['source']['name'] %></p>
          <p class="card-text"><%= @article['description'] %></p>
          <p class="card-text"><%= @article['content'] %></p>
        </div>
        <div class="card-footer">
          <%= link_to 'Back', articles_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
